<h1>Our Flats</h1>

<div class="container">
  <div class="row">
  <% @flats.each do |flat| %>
  <div class="col-xs-12 col-sm-4">
    <div class="card">
       <h2><%= flat.name %></h2>
       <p><%= flat.address %></p>
       <p><%= flat.description %></p>
       <p><%= flat.price_per_night %></p>
       <p><%= flat.number_of_guests  %></p>
    </div>
  <% end %>
 </div>
</div>

